<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <title>Shortify.icu</title>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if (isAuthenticated) {%>
              <a class="mr-3">
                <strong> <%= user.name %> </strong>
              </a>
              <a class="button is-primary" href="/logout">
                <strong>Logout</strong>
              </a>
              <% } else { %>
              <a class="button is-primary" href="/login">
                <strong>Login</strong>
              </a>

              <% } %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1 class="title is-1 mt-3">URL Shrinker</h1>
      <form action="/shrink" method="POST">
        <input
          class="input is-large"
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="Enter URL to shrink"
        />
        <input class="mt-3 button is-info" type="submit" value="Shrink" />
      </form>
      <div class="mt-5">
        <div class="columns">
          <div class="column is-one-quarter">Original URL</div>
          <div class="column is-one-quarter">Short URL</div>
          <div class="column is-one-quarter">Clicks</div>
          <div class="column is-one-quarter">Action</div>
        </div>

        <% shortUrls.forEach(function(shortUrl) { %>
        <div class="columns">
          <div class="column is-one-quarter" style="overflow-wrap: anywhere;">
            <a href="<%= shortUrl.originalUrl %> "
              ><%= shortUrl.originalUrl %>
            </a>
          </div>
          <div class="column is-one-quarter">
            <a href="<%= shortUrl.shortUrl %> "><%= shortUrl.shortUrl %> </a>
          </div>
          <div class="column is-one-quarter"><%= shortUrl.clicks %></div>
          <a class="button" href="/delete/<%= shortUrl.shortUrl  %> ">delete</a>
        </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
