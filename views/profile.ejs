<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="table">
      <div class="table-title">
        <div class="table-item">Original URL</div>
        <div class="table-item">Short URL</div>
        <div class="table-item">Clicks</div>
        <div class="table-item">Action</div>
      </div>

      <% data.forEach(function(shortUrl) { %>
      <div class="table-row">
        <div class="table-item" style="overflow-wrap: anywhere">
          <a href="<%= shortUrl.originalUrl %> "
            ><%= shortUrl.originalUrl %>
          </a>
        </div>
        <div class="table-item">
          <a href="<%= shortUrl.shortUrl %> "><%= shortUrl.shortUrl %> </a>
        </div>
        <div class="table-item"><%= shortUrl.clicks %></div>
        <div class="table-item">
          <a class="button" href="/delete/<%= shortUrl.shortUrl  %> ">delete</a>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
